# Redis 설정 (Docker Compose 사용 시 자동 설정됨)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Google Gemini API (자막 번역/언어 분석용)
GEMINI_API_KEY=your_gemini_api_key_here

# 클라우드 스토리지 설정 (S3 또는 Cloudflare R2)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=auto
AWS_BUCKET_NAME=karaoke-assets
AWS_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com

# 임시 파일 디렉토리
TEMP_DIR=/tmp/karaoke-gen
